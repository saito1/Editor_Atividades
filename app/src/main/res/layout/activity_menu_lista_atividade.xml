<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <ImageButton
        android:id="@+id/botao1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="fill_horizontal|fill_vertical"
        android:scaleType="center"
        app:srcCompat="@mipmap/atividade_ativa"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/corAtividadeAtiva"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/botao2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="fill_horizontal|fill_vertical"
        android:scaleType="center"
        app:srcCompat="@mipmap/atividade_passiva"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@color/corAtividadePassiva"
        android:layout_weight="1"/>

</LinearLayout>