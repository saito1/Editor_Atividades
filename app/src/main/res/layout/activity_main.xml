<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.edu.rafaelsaito.editoratividades.MainActivity"
        android:layout_width="match_parent"
        android:id="@+id/primeiro"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/botao1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/corCriarAtividade"
            android:padding="0dp"
            app:srcCompat="@mipmap/criar_atividade" />

        <ImageButton
            android:id="@+id/botao2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/corEditarAtividade"
            android:padding="0dp"
            app:srcCompat="@mipmap/editar_atividade" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.edu.rafaelsaito.editoratividades.MainActivity"
        android:id="@+id/segundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/botao3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/corAluno"
            android:padding="0dp"
            app:srcCompat="@mipmap/aluno" />

        <ImageButton
            android:id="@+id/botao4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/corAtividades"
            android:padding="0dp"
            app:srcCompat="@mipmap/atividades" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.edu.rafaelsaito.editoratividades.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="0dp">

        <ImageButton
            android:id="@+id/botao5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/corRelatorio"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/relatorios" />

        <ImageButton
            android:id="@+id/botao6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@color/corMidias"
            android:padding="0dp"
            app:srcCompat="@mipmap/midias" />
    </LinearLayout>
</LinearLayout>

